ISSN = {0379-864X, 1464-3553},
Journal = {Chemical Senses},
Keywords = {pheromones, initiation of foraging & recruitment & defense, tropical termite soldiers, Animal Defensive Behavior, Animal Feeding Behavior, Military Personnel, Pheromones, Insects},
Number = {4},
Pages = {409 - 420},
Title = {The role of pheromones in the initiation of foraging, recruitment and defence by the soldiers of a tropical termite, Nasutitermes corniger (Motschulsky).},
