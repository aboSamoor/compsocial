Booktitle = {Global mixed race.},
ISBN = {978-0-8147-7073-3, 978-0-8147-8915-5},
Pages = {213 - 237},
Publisher = {New York University Press},
Title = {Capturing 'mixed race' in the decennial UK censuses: Are current approaches sustainable in the age of globalization and superdiversity?},
URL = {https://libproxy.cc.stonybrook.edu/login?url=http://search.ebscohost.com/login.aspx?direct=true&db=psyh&AN=2014-20689-010&site=ehost-live&scope=site},
Year = {2014},
}


@article{2000-14304-00120001201,
Abstract = {The authors question whether ethnic separatism is the inevitable consequence of pursuing policies that allow for a reflowering of subnational ethnic identities, as in Quebec, or if there are ways of having both a strong sense of attachment to one's own while still fostering loyalty to the larger state, as some variants of pluralist theory would have it. This article describes a comparative study of the relationship between attachment to the individual ethnic group and loyalty to the larger country. Research on the relationship between strength of ethnic attachments and loyalty to the country as a whole impinges on the political wisdom of choosing public policies from affirmative action, to bilingual education to political autonomy for subregional groups. The comparative politics literature is fraught with assumptions about the nature of this relationship, but few studies have tried to empirically estimate it. The authors test pluralist, melting pot, and ethnic dominance models of ethnic attachment and overall levels of patriotism in the US and 4 other polyethnic states. The data are derived from a 1995 ISSP National Identity Survey and the 1990–93 World Values Survey. Mixed support is found for the alternative models. (PsycINFO Database Record (c) 2013 APA, all rights reserved)},
