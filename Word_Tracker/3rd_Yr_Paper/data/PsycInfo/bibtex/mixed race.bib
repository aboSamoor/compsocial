Keywords = {School-based interventions, Positive Action, Self-esteem, Aggression, Rural, Propensity score analysis, No terms assigned},
Title = {A longitudinal evaluation of the positive action program in a low-income, racially diverse, rural county: Effects on self-esteem, school hassles, aggression, and internalizing symptoms.},
