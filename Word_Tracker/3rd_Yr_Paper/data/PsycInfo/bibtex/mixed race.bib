Journal = {Preventing Chronic Disease: Public Health Research, Practice, and Policy},
Keywords = {healthy food choices, health-disparity, restaurants, health department record, children's menus, food quality, Food, Health Promotion, Health Disparities, Childhood Development, Disadvantaged, Health Behavior},
