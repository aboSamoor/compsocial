ISSN = {0037-8046},
Journal = {Social Work},
Keywords = {cultural attunement, cultural competence, mixed race, multiracial, social work practice, Competence, Social Casework, Sociocultural Factors, Multiculturalism, Racial and Ethnic Attitudes},
