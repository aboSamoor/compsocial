ISSN = {0022-3956},
Journal = {Journal of Psychiatric Research},
Keywords = {comorbidity, substance use disorders, mental disorders, treatment seeking behavior, racial differences, Asian Americans, mixed race people, biracial, Native Hawaiians, Pacific Islanders, Comorbidity, Drug Abuse, Mental Disorders, Racial and Ethnic Differences, Asians, Hawaii Natives, Health Care Seeking Behavior, Pacific Islanders},
